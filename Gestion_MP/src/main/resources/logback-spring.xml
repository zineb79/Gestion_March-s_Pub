<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Variable globale pour les chemins de log -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Appenders par service -->
    <appender name="AO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/ao.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/ao.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="DECOMPTE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/decompte.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/decompte.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="NOTIF_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/notification.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/notification.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ORDRE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/ordre-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/ordre-service.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="PVR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/pv-reception.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/pv-reception.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="SOCIETE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/societe.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/societe.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="MARCHE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/marche.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/marche.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root logger (console seulement) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Loggers spÃ©cifiques aux services -->
    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.AppelOffreServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="AO_FILE"/>
    </logger>

    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.DecompteServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="DECOMPTE_FILE"/>
    </logger>

    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.NotificationApprServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="NOTIF_FILE"/>
    </logger>

    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.OrdreDeServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="ORDRE_FILE"/>
    </logger>

    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.PvReceptionServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="PVR_FILE"/>
    </logger>

    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.SocieteServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="SOCIETE_FILE"/>
    </logger>

    <logger name="ensaa.ministere.gestionmarchepublic.servicesImplementation.MarcheServiceImpl" level="DEBUG" additivity="false">
        <appender-ref ref="MARCHE_FILE"/>
    </logger>

</configuration>
